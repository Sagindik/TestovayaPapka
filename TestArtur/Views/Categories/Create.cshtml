@model TestArtur.Models.CategoryViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Категории</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naimenovanie" class="control-label">Наименование</label>
                <input asp-for="Naimenovanie" class="form-control" />
                <span asp-validation-for="Naimenovanie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
